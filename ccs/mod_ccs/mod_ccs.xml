<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="module" client="site" method="upgrade">
	<name>MOD_CCS</name>
	<author>Igor Kekeljevc</author>
	<creationDate>Sep 2012</creationDate>
	<copyright>Copyright (C) 2012, Igor Kekeljevic. All rights reserved.</copyright>
	<license></license>
	<authorEmail>Igor.Kekeljevic@gmail.com</authorEmail>
	<authorUrl></authorUrl>
	<version>0.1</version>
	<description>MOD_CCS_XML_DESCRIPTION</description>
	<files>
		<folder>templates</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename module="mod_ccs">mod_ccs.php</filename>
	</files>
	<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.mod_ccs.ini</language>
			<language tag="en-GB">en-GB/en-GB.mod_ccs.sys.ini</language>
	</languages>
	<help />
	<config>
		<fields name="params">
			<fieldset name="basic">
	            <field name="MOD_CCS_LAYOUT_DATABASE_ID" type="text" default="0" size="20" label="MOD_CCS_LAYOUT_DATABASE_ID" description="MOD_CCS_LAYOUT_DATABASE_ID_DESC" />
	            <field name="MOD_CCS_LAYOUT_TEMPLATE_TABLE" type="filelist" default="" label="MOD_CCS_LAYOUT_TEMPLATE_TABLE" description="MOD_CCS_LAYOUT_TEMPLATE_TABLE_DESC" directory="modules/mod_ccs/templates" filter="php" exclude="" stripext="" />
	            <field name="MOD_CCS_LAYOUT_TEMPLATE_ROW" type="filelist" default="" label="MOD_CCS_LAYOUT_TEMPLATE_ROW" description="MOD_CCS_LAYOUT_TEMPLATE_ROW_DESC" directory="modules/mod_ccs/templates" filter="php" exclude="" stripext="" />
			</fieldset>
		</fields>
	</config>
</extension>
