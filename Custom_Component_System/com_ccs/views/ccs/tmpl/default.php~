<?php
 
// No direct access
defined('_JEXEC') or die('Restricted access');

JHtml::_('behavior.multiselect');// Select/Deselect all
jimport( 'joomla.html.html.grid' );

$listOrder = $this->escape($this->state->get('filter_order'));
$listDirn  = $this->escape($this->state->get('filter_order_Dir'));

$app = JFactory::getApplication();
$prefix = $app->getCfg('dbprefix');

// Insert JavaScripts
$this->doc->addScriptDeclaration( '

function cbSelect(rowID){
		var cbs = document.getElementsByName("cid[]");
		for(i=0; i<cbs.length; i++) {
			cbs[i].checked = false;
		}
		document.id(rowID).checked = true;
	}

function rowEdit(rowID){
		cbSelect(rowID);
		document.id("task").value = "edit";
		document.adminForm.submit();
	}
	
function rowDelete(rowID){
		cbSelect(rowID);
		document.id("task").value = "delete";
		document.adminForm.submit();
	}

' );
?>    

<form action="<?php echo JRoute::_('index.php'); ?>" method="post" name="adminForm" id="adminForm">

<table cellpadding="0" cellspacing="0" border="0" width="100%" style="table-layout:fixed">
<tbody>
<tr>
<td class="sportorg_sidePanel">

<ul id="breadcrumbMenu"></ul>
<?php
$JS_breadcrumbMenu_items.= 'var breadcrumbMenu_items = Array();'."\n";
$i=0;
foreach($this->menuItems as $menuItem)
{
	if($this->alias == $menuItem[2])
	{
		$JS_breadcrumbMenu_currItem = 'var breadcrumbMenu_currItem='.$menuItem[0].';'."\n";
	}
	
	// Create JS Array from PHP Menu List Array	
	$cacheArray = Array();
	foreach($menuItem as $menuItemParam)
	{
		$cacheArray[]	='"'.$menuItemParam.'"';
	}
	$JS_breadcrumbMenu_items.= 'breadcrumbMenu_items['.$i.'] = Array('.implode(',',$cacheArray).');'."\n";
	$i++;
}
$JS_breadcrumbMenu_script='
// Declare global vars
var breadcrumbMenu_wrap,newDIV,newUL,newLI,newH1,newIMG,newA,newBR,newTABLE,newTR,newTD,cache_str,cache_int,cache_obj,newSPAN;

function breadcrumbMenu_render_item(wrapperID)
{
		newLI = document.createElement("li");
		document.id(wrapperID).appendChild(newLI).set("id", "breadcrumbMenu_parent_"+cache_int);
		
		newTABLE = document.createElement("table");
		newTR = document.createElement("tr");
		document.id("breadcrumbMenu_parent_"+cache_int).appendChild(newTABLE).appendChild(newTR).set("id", "breadcrumbMenu_parent_tr_"+cache_int);
		
		newTD = document.createElement("td");
		newA = document.createElement("a");
		document.id("breadcrumbMenu_parent_tr_"+cache_int).appendChild(newTD).set("class", "breadcrumbMenu_link_left").appendChild(newA).set("href","#").set("id", "breadcrumbMenu_link_left_a_"+cache_int).set("onClick", "document.id(\'filter_order\').value=\'\'; document.id(\'filter_order_Dir\').value=\'\'; document.id(\'alias\').value=\'"+breadcrumbMenu_items[cache_int][2]+"\';document.id(\'adminForm\').submit();return false;").appendText(breadcrumbMenu_items[cache_int][3]);	
		
		newTD = document.createElement("td");
		newA = document.createElement("a");
		document.id("breadcrumbMenu_parent_tr_"+cache_int).appendChild(newTD).set("class", "breadcrumbMenu_link_right").appendChild(newA).set("href","#").set("id", "breadcrumbMenu_link_right_a_"+cache_int).set("onClick", "breadcrumbMenu_render(\'"+breadcrumbMenu_items[cache_int][0]+"\',true);return false;").appendText("â—„");		

		cache_obj = document.id("breadcrumbMenu_parent_tr_"+cache_int).getSize();
		document.id("breadcrumbMenu_link_right_a_"+cache_int).set("style","line-height:"+cache_obj.y+"px;");
}

function breadcrumbMenu_render(currItemId,useAnim)
{

// Prepare menu wrapper
breadcrumbMenu_wrap = document.id("breadcrumbMenu");
breadcrumbMenu_wrap.empty();

// Calculate Parent
var breadcrumbMenu_parentItems=Array();
cache_int=0;// Use to calculate array key for breadcrumbMenu_parentItems
cache_str=currItemId;// Use to store current position in recursion. It stores menu item parent_id (6th value).
while (cache_str!="0")
{
	for(var iii=0;iii<breadcrumbMenu_items.length;iii++)
	{	
		if(cache_str == breadcrumbMenu_items[iii][0])
		{
			cache_str=breadcrumbMenu_items[iii][5];
			breadcrumbMenu_parentItems[cache_int]=iii;
			cache_int++;	
		}
	}
}
breadcrumbMenu_parentItems.reverse();// Reverse order
breadcrumbMenu_parentItems.pop();// Remove last

// Render Parent items 
for(var iiii=0;iiii<breadcrumbMenu_parentItems.length;iiii++)
{
		// Use cache_int to store current item position in breadcrumbMenu_items array
		cache_int = breadcrumbMenu_parentItems[iiii]; 
		breadcrumbMenu_render_item("breadcrumbMenu");
}

// Show Current
for(var i=0;i<breadcrumbMenu_items.length;i++)
{	
	if(currItemId == breadcrumbMenu_items[i][0])
	{
		newDIV = document.createElement("div");	
		breadcrumbMenu_wrap.appendChild(newDIV).set("id", "breadcrumbMenu_currItem_wrap").set("class", "border");
		
		if(currItemId != breadcrumbMenu_currItem)// Mark current content
		{
			newA = document.createElement("a");
			document.id("breadcrumbMenu_currItem_wrap").appendChild(newA).set("href","#").set("onClick", "document.id(\'filter_order\').value=\'\'; document.id(\'filter_order_Dir\').value=\'\'; document.id(\'alias\').value=\'"+breadcrumbMenu_items[i][2]+"\';document.id(\'adminForm\').submit();return false;").set("id", "breadcrumbMenu_current_h1_wrap");	
		}else{
			newSPAN = document.createElement("span");
			document.id("breadcrumbMenu_currItem_wrap").appendChild(newSPAN).set("id", "breadcrumbMenu_current_h1_wrap");	
		}
		
		if(breadcrumbMenu_items[i][4]!="")// Check is there an image for item
		{
			newIMG = document.createElement("img");
			document.id("breadcrumbMenu_current_h1_wrap").appendChild(newIMG).set("src", "'.JURI::root().'administrator/"+breadcrumbMenu_items[i][4]);		
		}
		
		// Add current item
		newH1 = document.createElement("h1");
		document.id("breadcrumbMenu_current_h1_wrap").appendChild(newH1).appendText(breadcrumbMenu_items[i][3]);	

		// Prepare wrapper for children
		newUL = document.createElement("ul");
		document.id("breadcrumbMenu_currItem_wrap").appendChild(newUL).set("id", "breadcrumbMenu_childern_wrap");
	}
}

// Show Children
for(var ii=0;ii<breadcrumbMenu_items.length;ii++)
{
	if(breadcrumbMenu_items[ii][5] == currItemId)// Finds all children with parent_id same as current id
	{
		// Use cache_int to store current item position in breadcrumbMenu_items array
		cache_int = ii; 
		breadcrumbMenu_render_item("breadcrumbMenu_childern_wrap");
	}
}


// Slide In Menu Animation for navigation
if(useAnim)
{
	var myFx = new Fx.Slide(breadcrumbMenu_wrap, {
		duration: 440,
		transition: Fx.Transitions.Back.easeOut
	});
	myFx.hide().slideIn();
}

	
}

';

$JS_adminList_select='
function JS_adminList_select()
{
	document.id("adminlist").getElements("td").addEvent("click", function() {
		var currID=this.getParent().get("id");
		currID=currID.substring(3, currID.length);
		var toggle = !document.id("cb"+currID).get("checked");
		document.id("cb"+currID).checked = toggle;
		this.getParent().toggleClass("active");
   }).addEvent("mouseenter", function() {
this.getParent().addClass("hover");
   }).addEvent("mouseleave", function() {
this.getParent().removeClass("hover");
   });
}
';

$JS_domready='
window.addEvent("domready", function(){ 

	breadcrumbMenu_render(breadcrumbMenu_currItem,false);
	
	JS_adminList_select();

});
';

$this->doc->addScript(JURI::root().'administrator/components/com_sportorg/assets/js/mootools-more-1.4-full.js');

$this->doc->addScriptDeclaration($JS_breadcrumbMenu_currItem);
$this->doc->addScriptDeclaration($JS_breadcrumbMenu_items);
$this->doc->addScriptDeclaration($JS_breadcrumbMenu_script);
$this->doc->addScriptDeclaration($JS_adminList_select);
$this->doc->addScriptDeclaration($JS_domready);
?>
</td>
<td class="sportorg_tableView">

	<fieldset id="filter-bar">
        <div class="filter-search fltlft">        
