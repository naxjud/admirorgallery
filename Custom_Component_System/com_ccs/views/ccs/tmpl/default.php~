	 echo '</th>';     
	 echo '<th width="1%">'; 
	 echo JText::_('COM_SPORTORG_DELETE'); 
	 echo '</th>'; 
	 echo '</tr>';
	 echo '</tbody>';
	
	 // FORMAT DATA
	 echo '<tbody>';
	 foreach ($this->items as $i => $item)
	 {
		 echo '<tr id="row'.$i.'">';
		 foreach ($this->showFields as $showFieldKey => $showFieldValue)
		 {
				echo '<td>';
				echo htmlspecialchars($item->$showFieldKey);
				echo '</td>';
		 }          
		 echo '<td width="1%">';
		 echo '<input type="checkbox" name="cid[]" id="cb'.$i.'" value="'.$item->id.'" style="display:none" />'; 
		 echo '<a href="#" title="'.JText::_('COM_SPORTORG_EDIT').'" class="sportorg_btn_edit_24" onclick="rowEdit(\'cb'.$i.'\'); return false;">&nbsp;</a>'; 
		 echo '</td>';     
		 echo '<td width="1%">'; 
		 echo '<a href="#" title="'.JText::_('COM_SPORTORG_DELETE').'" class="sportorg_btn_delete_24" onclick="rowDelete(\'cb'.$i.'\'); return false;">&nbsp;</a>'; 
		 echo '</td>';
	    echo '</tr>';
	 }
	 echo '</tbody>';	 
    ?>
    
	</table>
	</div>
	
	<div class="sportorg_pagination_wrap">
		<?php echo $this->pagination->getListFooter();?>
