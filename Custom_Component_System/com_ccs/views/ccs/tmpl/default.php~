            }
            echo '</select>';
            ?>	
		    <input type="text" name="filter_search_value" id="filter_search_value" value="<?php echo $this->escape($this->state->get('filter_search_value')); ?>" title="<?php echo JText::_('COM_CONTACT_SEARCH_IN_NAME'); ?>" />
		    <button type="submit"><?php echo JText::_('COM_SPORTORG_SEARCH'); ?></button>
		    <button type="button" onclick="document.id('filter_search_value').value='';this.form.submit();"><?php echo JText::_('COM_SPORTORG_CLEAR'); ?></button>
        </div>
	    <div class="filter-select fltrt">
			<!-- Here goes options on the right side -->		    
	    </div>
    </fieldset>

	<div class="sportorg_table_wrap">
	 <table id="adminlist" class="adminlist" cellspacing="0" cellpadding="0" border="0" widtd="100%">
	 
	 <?php
	 // FORMAT HEADER  
	 echo '<thead>'; 
	 echo '<tr>';  
	 foreach ($this->showFields as $showFieldKey => $showFieldValue)
	 {
	     echo '<th>';
	     echo JHtml::_('grid.sort', JText::_(strtoupper($showFieldKey)), $showFieldKey, $listDirn, $listOrder);
	     echo '</th>';
	 }
	 echo '<th width="1%">'; 
